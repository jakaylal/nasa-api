<form method="POST" action="/date">
  <input type="date" name="date" required>
  <button type="submit">Search</button>
</form>
<% if (nasaData) { %>
  <img src="<%= nasaData.url %>" alt="<%= nasaData.title %>">
  <h2><%= nasaData.title %></h2>
  <form method="POST" action="/save">
    <input type="hidden" name="title" value="<%= nasaData.title %>">
    <input type="hidden" name="url" value="<%= nasaData.url %>">
    <input type="hidden" name="date" value="<%= nasaData.date %>">
    <input type="hidden" name="explanation" value="<%= nasaData.explanation %>">
    <button type="submit">Save</button>
  </form>
<% } %>
